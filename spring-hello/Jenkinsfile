pipeline {
    agent any

    environment {
        IMAGE_NAME = "spring-hello"
        TEST_CONTAINER = "test-container"
        PROD_CONTAINER = "prod-container"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/KeanVTC/hello-world.git'
            }
        }

        stage('Build JAR') {
            steps {
                dir('spring-hello') {
                    bat 'mvn clean package'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('spring-hello') {
                    bat "docker build -t %IMAGE_NAME% ."
                }
            }
        }

        stage('Run Test Container') {
            steps {
                bat "docker run -d -p 8086:8080 --name %TEST_CONTAINER% %IMAGE_NAME%"
                sleep time: 10, unit: 'SECONDS'
            }
        }

        stage('Install Playwright') {
            steps {
                dir('spring-hello/playwright') {
                    bat 'npm install'
                    bat 'npx playwright install'
                }
            }
        }

stage('Run E2E Test') {
    steps {
        dir('spring-hello/playwright-tests') {
            bat 'npx playwright test'
        }
    }
}


        stage('Stop Test Container') {
            steps {
                bat "docker rm -f %TEST_CONTAINER% || exit 0"
            }
        }

        stage('Deploy to Production') {
            steps {
                bat "docker rm -f %PROD_CONTAINER% || exit 0"
                bat "docker run -d -p 9090:8080 --name %PROD_CONTAINER% %IMAGE_NAME%"
            }
        }
    }

    post {
        always {
            echo 'Cleaning up containers...'
            bat "docker rm -f %TEST_CONTAINER% || exit 0"
        }
    }
}
