pipeline {
    agent any

    environment {
        TEST_CONTAINER = 'spring-hello-container'
        PROD_CONTAINER = 'spring-prod-container'
        INTERNAL_PORT = '8086'
        TEST_PORT = '9090'
        PROD_PORT = '9091'
        PLAYWRIGHT_REPORT_DIR = 'spring-hello/playwright-tests/playwright-report'     // Default HTML reporter output
        CUSTOM_REPORT_DIR = 'spring-hello/playwright-tests/custom-report'              // Your custom reporter output
    }

    stages {
        stage('Build Spring Boot App') {
            steps {
                dir('spring-hello') {
                    echo "üì¶ Building Spring Boot application..."
                    bat 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Start Test Container') {
            steps {
                script {
                    echo "üê≥ Starting test container..."
                    def exists = bat(script: "docker inspect --type container ${TEST_CONTAINER}", returnStatus: true)
                    if (exists == 0) {
                        bat "docker start ${TEST_CONTAINER}"
                        echo "‚úÖ Reused existing test container."
                    } else {
                        dir('spring-hello') {
                            bat "docker build -t spring-hello:latest ."
                        }
                        bat "docker create --name ${TEST_CONTAINER} -p ${TEST_PORT}:${INTERNAL_PORT} spring-hello:latest"
                        bat "docker start ${TEST_CONTAINER}"
                        echo "üöÄ New test container started."
                    }
                    sleep time: 20, unit: 'SECONDS'
                }
            }
        }

        stage('Install Playwright') {
            steps {
                dir('spring-hello') {
                    echo "üß™ Installing Playwright..."
                    bat 'npm ci'
                    bat 'npx playwright install'
                }
            }
        }

        stage('Run E2E Tests (Test Container)') {
            steps {
                dir('spring-hello/playwright-tests') {
                    echo "üö¶ Running Playwright E2E tests (Test)..."
                    script {
                        env.BASE_URL = "http://localhost:${TEST_PORT}"
                        env.REPORT_TYPE = "test"
                        def testStatus = bat(
                            script: """
                                set BASE_URL=${env.BASE_URL}
                                set REPORT_TYPE=${env.REPORT_TYPE}
                                npx playwright test --project=chromium --project=firefox --project=webkit
                            """,
                            returnStatus: true
                        )
                        if (testStatus != 0) {
                            error("‚ùå Playwright test against test container failed.")
                        }
                    }
                }
            }
        }

        stage('Archive Test Reports') {
            steps {
                script {
                    echo "üìÇ Archiving Test container reports..."
                    def ts = new Date().format("yyyyMMdd-HHmmss")

                    // Archive default Playwright HTML report
                    bat "xcopy /E /I /Y \"${PLAYWRIGHT_REPORT_DIR}\" \"spring-hello/playwright-tests/playwright-report-test-${ts}\""

                    // Archive custom report folder if exists
                    bat "if exist \"${CUSTOM_REPORT_DIR}\" xcopy /E /I /Y \"${CUSTOM_REPORT_DIR}\" \"spring-hello/playwright-tests/custom-report-test-${ts}\""
                }
            }
        }

        stage('Publish Test Reports') {
            steps {
                echo "üìä Publishing Playwright test reports (Test)..."
                publishHTML(target: [
                    reportDir: "${PLAYWRIGHT_REPORT_DIR}",
                    reportFiles: 'index.html',
                    reportName: "Playwright E2E Report - Test Container",
                    allowMissing: true,
                    alwaysLinkToLastBuild: true,
                    keepAll: true
                ])

                // Publish custom report if exists
                script {
                    if (fileExists("${CUSTOM_REPORT_DIR}/report.html")) {
                        publishHTML(target: [
                            reportDir: "${CUSTOM_REPORT_DIR}",
                            reportFiles: 'report.html',
                            reportName: "Custom Playwright HTML Report - Test Container",
                            allowMissing: true,
                            alwaysLinkToLastBuild: true,
                            keepAll: true
                        ])
                    }
                }
            }
        }

        stage('Stop Test Container') {
            steps {
                echo "üõë Stopping test container..."
                script {
                    def exists = bat(script: "docker inspect --type container ${TEST_CONTAINER}", returnStatus: true)
                    if (exists == 0) {
                        bat "docker stop ${TEST_CONTAINER}"
                    }
                }
            }
        }

        stage('Deploy to Production') {
            steps {
                echo "üöÄ Deploying to production..."
                script {
                    def exists = bat(script: "docker inspect --type container ${PROD_CONTAINER}", returnStatus: true)
                    if (exists == 0) {
                        bat "docker stop ${PROD_CONTAINER}"
                        bat "docker rm ${PROD_CONTAINER}"
                    }
                    bat "docker run -d --name ${PROD_CONTAINER} -p ${PROD_PORT}:${INTERNAL_PORT} spring-hello:latest"
                    sleep time: 15, unit: 'SECONDS'
                }
            }
        }

        stage('Run E2E Tests (Production)') {
            steps {
                dir('spring-hello/playwright-tests') {
                    echo "üö¶ Running Playwright E2E tests (Production)..."
                    script {
                        env.BASE_URL = "http://localhost:${PROD_PORT}"
                        env.REPORT_TYPE = "prod"
                        def prodTestStatus = bat(
                            script: """
                                set BASE_URL=${env.BASE_URL}
                                set REPORT_TYPE=${env.REPORT_TYPE}
                                npx playwright test --project=chromium --project=firefox --project=webkit
                            """,
                            returnStatus: true
                        )
                        if (prodTestStatus != 0) {
                            error("‚ùå Playwright test against production failed.")
                        }
                    }
                }
            }
        }

        stage('Archive Production Reports') {
            steps {
                script {
                    echo "üìÇ Archiving Production reports..."
                    def ts = new Date().format("yyyyMMdd-HHmmss")

                    // Archive default Playwright HTML report
                    bat "xcopy /E /I /Y \"${PLAYWRIGHT_REPORT_DIR}\" \"spring-hello/playwright-tests/playwright-report-prod-${ts}\""

                    // Archive custom report folder if exists
                    bat "if exist \"${CUSTOM_REPORT_DIR}\" xcopy /E /I /Y \"${CUSTOM_REPORT_DIR}\" \"spring-hello/playwright-tests/custom-report-prod-${ts}\""
                }
            }
        }

        stage('Publish Production Reports') {
            steps {
                echo "üìä Publishing Playwright test reports (Production)..."
                publishHTML(target: [
                    reportDir: "${PLAYWRIGHT_REPORT_DIR}",
                    reportFiles: 'index.html',
                    reportName: "Playwright E2E Report - Production",
                    allowMissing: true,
                    alwaysLinkToLastBuild: true,
                    keepAll: true
                ])

                // Publish custom report if exists
                script {
                    if (fileExists("${CUSTOM_REPORT_DIR}/report.html")) {
                        publishHTML(target: [
                            reportDir: "${CUSTOM_REPORT_DIR}",
                            reportFiles: 'report.html',
                            reportName: "Custom Playwright HTML Report - Production",
                            allowMissing: true,
                            alwaysLinkToLastBuild: true,
                            keepAll: true
                        ])
                    }
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ Pipeline SUCCESS: App deployed and E2E tested."
        }
        failure {
            echo "‚ùå Pipeline FAILED. Attempting test container cleanup..."
            script {
                def exists = bat(script: "docker inspect --type container ${TEST_CONTAINER}", returnStatus: true)
                if (exists == 0) {
                    bat "docker stop ${TEST_CONTAINER}"
                }
            }
        }
        always {
            echo 'üì¶ CI/CD pipeline complete.'
        }
    }
}
