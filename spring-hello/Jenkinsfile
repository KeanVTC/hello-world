pipeline {
    agent any

    environment {
        TEST_PORT = "8086"
        PROD_PORT = "9090"
        IMAGE_NAME = "hello-world-demo"
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/KeanVTC/hello-world.git'
            }
        }

        stage('Build JAR') {
            steps {
                dir('spring-hello') {
                    bat 'mvn clean package'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('spring-hello') {
                    bat "docker build -t %IMAGE_NAME% ."
                }
            }
        }

        stage('Run Test Container') {
            steps {
                bat "docker run -d -p %TEST_PORT%:8080 --name test-container %IMAGE_NAME%"
                // Optional: wait a few seconds to let Spring Boot start
                bat "ping -n 10 127.0.0.1 >nul"
            }
        }

        stage('Install Playwright') {
            steps {
                dir('spring-hello') {
                    bat 'npm install'
                }
            }
        }

        stage('Run E2E Test') {
            steps {
                dir('spring-hello') {
                    bat 'npx playwright test'
                }
            }
        }

        stage('Stop Test Container') {
            steps {
                bat 'docker stop test-container'
                bat 'docker rm test-container'
            }
        }

        stage('Deploy to Production') {
            steps {
                bat "docker run -d -p %PROD_PORT%:8080 --name prod-container %IMAGE_NAME%"
            }
        }
    }

    post {
        always {
            echo 'Cleaning up containers...'
            bat 'docker rm -f test-container || exit 0'
        }
    }
}
