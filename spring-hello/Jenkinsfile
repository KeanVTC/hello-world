pipeline {
    agent any

    tools {
        maven 'Maven 3.8.1' // adjust to your Jenkins Maven tool name
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/KeanVTC/hello-world.git'
            }
        }

        stage('Build with Maven') {
            steps {
                bat 'mvn clean install'
            }
        }

        stage('Deploy to Docker Tomcat') {
            steps {
                bat '''
                docker build -t spring-hello .
                docker stop spring-hello-container || echo not running
                docker rm spring-hello-container || echo already removed
                docker run -d --name spring-hello-container -p 8080:8080 spring-hello
                '''
            }
        }
    }

    post {
        failure {
            echo '‚ùå Build or deploy failed.'
        }
    }
}
